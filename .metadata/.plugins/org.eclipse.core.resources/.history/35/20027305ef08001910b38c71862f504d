
public class ForFlowEx3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
//		표현식
//		for (초기화; 조건식; 증감식) {
			//조건식이 true일 때 수행될 문장들을 적는다
//		}
//		디버깅		
		int sum = 0;	//초록 점 : breakpoint
		for(int i = 0; i <= 10; i++) {
			sum = sum + i;
			System.out.println(i + "까지의 합 : " + sum);
		}
		for(int i = 0; i <= 10; i++) {
			sum = sum + i;
			System.out.println(i + "까지의 합 : " + sum);
	}

	}
}
