
public class ForFlowEx1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
//		표현식
//		for (초기화; 조건식; 증감식) {
			//조건식이 true일 때 수행될 문장들을 적는다
//		}
		
		int sum = 0;
		for(int i = 0; i <= 10; i++); {
			sum = sum + 1;
			System.out.println(i + "까지의 합 : " + sum);
		}
	}

}
